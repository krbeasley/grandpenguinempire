{% extends "layouts/app.html.twig" %}

{% block title %}
    Home | {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block content %}

{% include "components/game-night.html.twig" with { 'id' : 'game-night-ticker' }%}

<main class="w-full flex items-center justify-center">
  <div class="w-11/12 max-w-350 text-text py-20 flex items-center justify-center flex-col gap-20">

    {# Hero Section #}
    <div class="w-full flex flex-col items-center justify-center">
      <div class="flex flex-col items-center gap-8 justify-center h-80 md:h-100">
        <p class="text-2xl/8 md:text-4xl/16 text-center">
          Welcome to the official<sup class="text-text/25">*</sup> website&nbsp;of&nbsp;the<br />
