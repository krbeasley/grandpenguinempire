        <img alt="ooh eeh ahh ooh" src="public/img/cat_spin.webp" />

        <p class="text-bkg">ohh ee ee ah ee oh ee ah ee</p>
      </div>
    </div>
  </div>
</main>

{% endblock %}

{% block scripts %}
    <script src="public/js/home.js" type="module"></script>
    {{ parent() }}
{% endblock %}
